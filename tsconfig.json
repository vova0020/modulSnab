{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,                   // Отключить строгие проверки
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "noImplicitAny": false,           // Отключить проверку на неявный any
    "strictNullChecks": false,         // Отключить строгие проверки на null
    "strictFunctionTypes": false,      // Отключить строгие проверки для функций
    "strictBindCallApply": false,      // Отключить строгие проверки для bind/call/apply
    "strictPropertyInitialization": false, // Отключить строгие проверки инициализации свойств
    "noFallthroughCasesInSwitch": false, // Отключить проверку на недостижимые случаи в switch
    "forceConsistentCasingInFileNames": false, // Отключить проверку регистров имен файлов


    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
